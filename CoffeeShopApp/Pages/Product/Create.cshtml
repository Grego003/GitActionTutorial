@page
@using CoffeeShopApp.Models
@model CoffeeShopApp.Pages.Product.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="mt-5 my-3 row d-flex align-items-center justify-content-between">
    <div class="col-6">
        <h1>Create New Product</h1>
    </div>
    <div class="col-1">
        <a asp-page="./Index" class="px-4 btn btn-primary">Back</a>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @Html.AntiForgeryToken()
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                 <label asp-for="NewProduct.Name" class="control-label"></label>
                 <input asp-for="NewProduct.Name" class="form-control" />
                 <span asp-validation-for="NewProduct.Name" class="text-danger"></span>
             </div>
             <div class="form-group">
                 <label asp-for="NewProduct.Price" class="control-label"></label>
                 <input asp-for="NewProduct.Price" class="form-control" type="number" />
                 <span asp-validation-for="NewProduct.Price" class="text-danger"></span>
             </div>
             <div class="form-group">
                 <label asp-for="NewProduct.Description" class="control-label"></label>
                 <input asp-for="NewProduct.Description" class="form-control" />
                 <span asp-validation-for="NewProduct.Description" class="text-danger"></span>
             </div>
            <div class="form-group">
                <label asp-for="NewProduct.ProductType" class="control-label"></label>
                <select asp-for ="NewProduct.ProductType" class="form-select" aria-label="ProductType">
                @foreach (ProductType category in Enum.GetValues(typeof(ProductType)))
                {
                        <option value="@category.ToString()">@Enum.GetName(typeof(ProductType), category)</option>
                }
                </select>
            </div>
             <div class="form-group">
                 <label asp-for="NewProduct.Stock" class="control-label"></label>
                 <input asp-for="NewProduct.Stock" class="form-control" type="number"/>
                 <span asp-validation-for="NewProduct.Stock" class="text-danger"></span>
             </div>
             <div class="form-group form-check">
                 <label class="form-check-label">
                     <input class="form-check-input" asp-for="NewProduct.IsSoldOut" /> @Html.DisplayNameFor(model => model.NewProduct.IsSoldOut)
                 </label>
             </div>
             <button class="btn btn-primary" type="submit">Create</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
