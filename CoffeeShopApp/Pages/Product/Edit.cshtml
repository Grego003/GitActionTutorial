@page
@using CoffeeShopApp.Models
@model CoffeeShopApp.Pages.Product.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="mt-5 my-3 row d-flex align-items-center justify-content-between">
    <div class="col-6">
        <h1>Edit Product</h1>
    </div>
    <div class="col-1">
        <a asp-page="./Index" class="px-4 btn btn-primary">Back</a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="CurrentProductDTO.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurrentProductDTO.Name" class="control-label"></label>
                <input asp-for="CurrentProductDTO.Name" class="form-control" />
                <span asp-validation-for="CurrentProductDTO.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentProductDTO.Price" class="control-label"></label>
                <input asp-for="CurrentProductDTO.Price" class="form-control" />
                <span asp-validation-for="CurrentProductDTO.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentProductDTO.Description" class="control-label"></label>
                <input asp-for="CurrentProductDTO.Description" class="form-control" />
                <span asp-validation-for="CurrentProductDTO.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentProductDTO.ProductType" class="control-label"></label>
                <select asp-for="CurrentProductDTO.ProductType" class="form-select" aria-label="ProductType">
                    @foreach (ProductType category in Enum.GetValues(typeof(ProductType)))
                    {
                        if (category == Model.CurrentProductDTO.ProductType)
                        {
                            <option value="@category.ToString()" selected>@Enum.GetName(typeof(ProductType), category)</option>
                        }
                        else
                        {
                            <option value="@category.ToString()">@Enum.GetName(typeof(ProductType), category)</option>
                        }
                    }
            </select>
            <div class="form-group">
                <label asp-for="CurrentProductDTO.Stock" class="control-label"></label>
                <input asp-for="CurrentProductDTO.Stock" class="form-control" />
                <span asp-validation-for="CurrentProductDTO.Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentProductDTO.TotalSold" class="control-label"></label>
                <input asp-for="CurrentProductDTO.TotalSold" class="form-control" />
                <span asp-validation-for="CurrentProductDTO.TotalSold" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CurrentProductDTO.IsSoldOut" /> @Html.DisplayNameFor(model => model.CurrentProductDTO.IsSoldOut)
                </label>
            </div>
                <button class="btn btn-primary" type="submit">Create</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
